<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
<ImageView
    android:id="@+id/review_iamge"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/ic_user"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/review_iamge"
        android:layout_gravity="top"
        android:id="@+id/review_Autohr"
        android:textColor="@android:color/tab_indicator_text"
        android:ellipsize="end"
        android:lines="1"
        tools:text="mario"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/review_iamge"
            android:layout_below="@id/review_Autohr"
            android:layout_gravity="top"
            android:id="@+id/review_review"
            android:textColor="@android:color/darker_gray"
            tools:text="Name : mario"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



</RelativeLayout>